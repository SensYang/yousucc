<?xml version="1.0" encoding="utf-8"?>
<com.yousucc.ui.widget.ResizeListenerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/resizeListenerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <com.yousucc.ui.widget.TopNavigationBar
        android:id="@+id/topNavigationBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.yousucc.ui.widget.ChatListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:cacheColorHint="@null"
        android:divider="@null"
        android:listSelector="@null"
        android:scrollbars="none" />

    <com.yousucc.ui.widget.ChatControlView
        android:id="@+id/chatControlView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom" />

</com.yousucc.ui.widget.ResizeListenerLayout>